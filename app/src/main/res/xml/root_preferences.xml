<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Account">

        <Preference
            app:key="key"
            app:title="Change Password" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="notifications"
            app:summaryOff="No Notifications will be sent for replies, follows, etc"
            app:summaryOn="Notifications will be sent for replies, follows, etc"
            app:title="Notifications" />

    </PreferenceCategory>

</PreferenceScreen>